@model BeautySalon.Models.Appointment

@{
    ViewBag.Title = "Edit Appointment";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h3 class="text-primary mb-3">Edit Appointment</h3>
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ServiceId, "Service", new { @class = "form-label fw-semibold" })
                            @Html.DropDownList("ServiceId", null, "-- Select Service --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.ServiceId, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.CustomerId, "Customer", new { @class = "form-label fw-semibold" })
                            @Html.DropDownList("CustomerId", null, "-- Select Customer --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.AppointmentDate, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(m => m.AppointmentDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                            @Html.ValidationMessageFor(m => m.AppointmentDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-check mb-3">
                            @Html.EditorFor(m => m.IsApproved, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.LabelFor(m => m.IsApproved, new { @class = "form-check-label ms-2" })
                            @Html.ValidationMessageFor(m => m.IsApproved, "", new { @class = "text-danger" })
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success px-4">Save</button>
                        </div>
                    }

                </div>
            </div>
            <div class="mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">← Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
