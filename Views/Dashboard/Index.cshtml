@model BeautySalon.Models.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">

    <!-- Header Section -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body bg-primary text-white rounded">
            <h2 class="mb-1"><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
            <p class="lead mb-0">You are logged in as an administrator.</p>
        </div>
    </div>

    <!-- Admin Users -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-people-fill"></i> Admin Users</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>UserName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.UserName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0"><i class="bi bi-calendar-check"></i> Upcoming Appointments</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Customer</th>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appt in Model.Appointments)
                    {
                        <tr>
                            <td>@appt.Customer.Name</td>
                            <td>@appt.Service.Name</td>
                            <td>@appt.AppointmentDate.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td>
                                @if (appt.IsApproved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Services -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-scissors"></i> Available Services</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Service Name</th>
                        <th>Price</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services)
                    {
                        <tr>
                            <td>@service.Name</td>
                            <td>BDT @service.price.ToString("N2")</td>
                            <td>@service.Duration mins</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-end">
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger px-4">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>
