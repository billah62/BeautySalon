@model BeautySalon.Models.Customer

@{
    ViewBag.Title = "Customer Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Customer Details</h4>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <label class="fw-bold">Name:</label>
                        <div>@Html.DisplayFor(m => m.Name)</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Email:</label>
                        <div>@Html.DisplayFor(m => m.Email)</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Phone:</label>
                        <div>@Html.DisplayFor(m => m.Phone)</div>
                    </div>

                </div>

                <div class="card-footer text-end">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        Edit
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                        Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
