@model BeautySalon.Models.Service

@{
    ViewBag.Title = "Delete Service";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <h3 class="text-danger mb-3">Delete Service</h3>
            <p class="text-muted">Are you sure you want to delete this service?</p>

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <strong>Service Details</strong>
                </div>

                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.Duration) minutes</dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">BDT @Model.price.ToString("N2")</dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-danger px-4">Delete</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
