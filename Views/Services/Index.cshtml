@model IEnumerable<BeautySalon.Models.Service>

@{
    ViewBag.Title = "Service List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Service List</h2>

        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Duration)</th>
                        <th>@Html.DisplayNameFor(m => m.price)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(_ => item.Name)</td>
                            <td>@Html.DisplayFor(_ => item.Duration) minutes</td>
                            <td>BDT @item.price.ToString("N2")</td>

                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning me-1">
                                    Edit
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info me-1 text-white">
                                    Details
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
