@model BeautySalon.Models.Appointment
@{
    ViewBag.Title = "Delete Appointment";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h3 class="text-danger mb-3">Delete Appointment</h3>
            <p class="text-muted">Are you sure you want to delete this appointment?</p>
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <strong>Appointment Details</strong>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Customer.Name)</dd>
                        <dt class="col-sm-4">Service</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Service.Name)</dd>
                        <dt class="col-sm-4">Appointment Date</dt>
                        <dd class="col-sm-8">@Model.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</dd>
                        <dt class="col-sm-4">Approved</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-danger px-4">Delete</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
